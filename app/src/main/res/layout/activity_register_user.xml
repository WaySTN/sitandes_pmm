<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white"
    android:gravity="center">

    <!-- Logo (same as login) -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="Logo Aplikasi"/>

    <!-- Judul Daftar -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Daftar Sekarang"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Input Nama Lengkap -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/green_light"
        app:hintTextColor="@color/gray_light"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1.5dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nama lengkap Anda"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:textSize="14sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            tools:ignore="TextFields"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Input Email -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email User"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/green_light"
        app:hintTextColor="@color/gray_light"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1.5dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="contoh@email.com"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:textSize="14sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            tools:ignore="TextFields"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Input Password -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kata Sandi User"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/green_light"
        app:hintTextColor="@color/gray_light"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/green_light"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1.5dp"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUserPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan password"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            tools:ignore="TextFields"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Tombol Daftar -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Daftar"
        android:textColor="@color/white"
        android:backgroundTint="@color/green_light"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"/>

    <!-- Text Sudah punya akun -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah punya akun? "
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk disini"
            android:textColor="@color/green_dark"/>
    </LinearLayout>

</LinearLayout>