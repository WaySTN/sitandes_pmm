<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header dengan foto alat -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <!-- Foto Alat -->
            <ImageView
                android:id="@+id/iv_foto_alat_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_tools"
                android:background="@color/background_light" />

            <!-- Overlay Gradient -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_overlay" />

            <!-- Status Badge -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <TextView
                    android:id="@+id/tv_status_alat_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tersedia"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_status_tersedia"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Harga Badge -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_margin="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <TextView
                    android:id="@+id/tv_harga_alat_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 50.000/hari"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_green"
                    android:padding="8dp" />

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nama Alat -->
            <TextView
                android:id="@+id/tv_nama_alat_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Traktor Kubota L3408"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Kelompok Tani dan Stok -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_group"
                    android:layout_marginEnd="6dp"
                    app:tint="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_kelompok_tani_user"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kelompok Tani Panggang Makmur"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_stok_alat_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stok: 1"
                    android:textSize="11sp"
                    android:textColor="@color/text_secondary"
                    android:background="@drawable/bg_stok_rounded"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_detail_alat"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Detail"
                    android:textSize="12sp"
                    android:textColor="@color/primary_green"
                    android:backgroundTint="@color/transparent"
                    app:strokeColor="@color/primary_green"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_info"
                    app:iconSize="16dp"
                    app:iconGravity="textStart"
                    app:iconTint="@color/primary_green"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_pinjam_alat"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Pinjam"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/primary_green"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_add_shopping_cart"
                    app:iconSize="16dp"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>