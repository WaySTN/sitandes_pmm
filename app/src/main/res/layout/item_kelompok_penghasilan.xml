<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Group Name and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_group_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelompok Tani Sejahtera"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    tools:text="Kelompok Tani Sejahtera" />

                <TextView
                    android:id="@+id/tv_ketua_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Ketua: Budi Santoso"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    tools:text="Ketua: Budi Santoso" />

            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_status"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Aktif"
                android:textSize="10sp"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/success_green"
                app:chipMinHeight="32dp"
                style="@style/Widget.Material3.Chip.Assist"
                tools:text="Aktif" />

        </LinearLayout>

        <!-- Penghasilan Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_rounded_light"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Penghasilan"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_total_penghasilan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Rp 12.500.000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_green"
                    tools:text="Rp 12.500.000" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:layout_marginHorizontal="8dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Anggota"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_member_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="15"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/card_blue"
                    tools:text="15" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider"
                android:layout_marginHorizontal="8dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Terakhir"
                    android:textSize="10sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_last_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="2 hari lalu"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    tools:text="2 hari lalu" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_detail"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:text="Lihat Detail"
                android:textSize="12sp"
                android:textColor="@color/primary_green"
                android:backgroundTint="@color/transparent"
                app:strokeColor="@color/primary_green"
                app:strokeWidth="1dp"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_visibility"
                app:iconSize="16dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_data"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:text="Tambah Data"
                android:textSize="12sp"
                android:backgroundTint="@color/primary_green"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_add"
                app:iconSize="16dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>