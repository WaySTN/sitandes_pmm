<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white">

        <!-- Foto Alat -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F8FDF8">

            <ImageView
                android:id="@+id/iv_foto_alat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_tools"
                android:background="#F8FDF8" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Info Alat -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/white">

            <!-- Nama Alat dan Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tv_nama_alat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Traktor Kubota"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_status_alat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tersedia"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_status_tersedia"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp" />

            </LinearLayout>

            <!-- Kelompok Tani -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_group"
                    android:layout_marginEnd="6dp"
                    app:tint="#666666" />

                <TextView
                    android:id="@+id/tv_kelompok_tani"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelompok Makmur Jaya"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <!-- Harga dan Stok -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_harga_alat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp 50.000/hari"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

                <TextView
                    android:id="@+id/tv_stok_alat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stok: 2"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_edit_alat"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="Edit"
                    android:textSize="11sp"
                    android:textColor="#4CAF50"
                    android:backgroundTint="#F8FDF8"
                    app:strokeColor="#4CAF50"
                    app:strokeWidth="1dp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_edit"
                    app:iconSize="14dp"
                    app:iconGravity="textStart"
                    app:iconTint="#4CAF50"
                    android:minWidth="0dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_hapus_alat"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="Hapus"
                    android:textSize="11sp"
                    android:textColor="#F44336"
                    android:backgroundTint="#FFF8F8"
                    app:strokeColor="#F44336"
                    app:strokeWidth="1dp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_delete"
                    app:iconSize="14dp"
                    app:iconGravity="textStart"
                    app:iconTint="#F44336"
                    android:minWidth="0dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

            <!-- Setelah LinearLayout yang berisi btn_edit_alat dan btn_hapus_alat -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:background="@color/white">

                <!-- Button untuk Pinjamkan/Kembalikan -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_toggle_pinjam"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="Pinjamkan"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:backgroundTint="#FF9800"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_handshake"
                    app:iconSize="14dp"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white"
                    android:minWidth="0dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    style="@style/Widget.Material3.Button" />

                <!-- Button untuk Maintenance -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_maintenance"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="Maintenance"
                    android:textSize="11sp"
                    android:textColor="#795548"
                    android:backgroundTint="#FFF3E0"
                    app:strokeColor="#795548"
                    app:strokeWidth="1dp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_build"
                    app:iconSize="14dp"
                    app:iconGravity="textStart"
                    app:iconTint="#795548"
                    android:minWidth="0dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>