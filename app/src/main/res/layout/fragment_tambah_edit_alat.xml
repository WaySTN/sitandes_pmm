<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/AdminFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- Header Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/primary_green">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_back_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_arrow_back"
                    android:layout_marginEnd="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    app:tint="@color/white" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_header_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tambah Alat Baru"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Lengkapi informasi alat pertanian"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:alpha="0.9" />

                </LinearLayout>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_add_box"
                    android:background="@drawable/circle_white_background"
                    android:padding="12dp"
                    android:scaleType="centerInside" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Form Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/white">

                <!-- Upload Foto -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foto Alat"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_green"
                    android:layout_marginBottom="8dp" />

                <!-- PERBAIKAN UTAMA: Menghapus semua element yang bisa menghalangi click -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_upload_foto"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:strokeColor="@color/primary_green"
                    app:strokeWidth="2dp"
                    app:cardBackgroundColor="#F8FDF8">

                    <!-- PERBAIKAN: Gunakan RelativeLayout dan buat overlay yang benar -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Placeholder Layout - Selalu terlihat di belakang -->
                        <LinearLayout
                            android:id="@+id/layout_upload_placeholder"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="#F8FDF8">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/ic_camera"
                                android:layout_marginBottom="12dp"
                                app:tint="@color/primary_green" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tambah Foto Alat"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_green" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Tap untuk memilih foto"
                                android:textSize="14sp"
                                android:textColor="@android:color/darker_gray" />

                        </LinearLayout>

                        <!-- Preview Image - Akan muncul di atas placeholder ketika ada gambar -->
                        <ImageView
                            android:id="@+id/iv_preview_foto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Nama Alat -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_green"
                    app:hintTextColor="@color/primary_green"
                    app:boxBackgroundColor="#F8FDF8"
                    app:boxBackgroundMode="filled"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_nama_alat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Alat"
                        android:inputType="textCapWords"
                        android:textSize="14sp"
                        android:textColor="@android:color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Deskripsi Alat -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_green"
                    app:hintTextColor="@color/primary_green"
                    app:boxBackgroundColor="#F8FDF8"
                    app:boxBackgroundMode="filled"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_deskripsi_alat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Deskripsi Alat (Opsional)"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:textSize="14sp"
                        android:textColor="@android:color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Row: Harga dan Stok -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Harga per Hari -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:boxStrokeColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"
                        app:boxBackgroundColor="#F8FDF8"
                        app:boxBackgroundMode="filled"
                        app:prefixText="Rp "
                        app:suffixText="/hari"
                        style="@style/Widget.Material3.TextInputLayout.FilledBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_harga_alat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Harga Sewa"
                            android:inputType="number"
                            android:textSize="14sp"
                            android:textColor="@android:color/black" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Stok -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:boxStrokeColor="@color/primary_green"
                        app:hintTextColor="@color/primary_green"
                        app:boxBackgroundColor="#F8FDF8"
                        app:boxBackgroundMode="filled"
                        style="@style/Widget.Material3.TextInputLayout.FilledBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_stok_alat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Jumlah Stok"
                            android:inputType="number"
                            android:textSize="14sp"
                            android:textColor="@android:color/black" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Kelompok Tani Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelompok Tani Pemilik"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_green"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_kelompok_tani"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_green"
                    app:hintTextColor="@color/primary_green"
                    app:boxBackgroundColor="#F8FDF8"
                    app:boxBackgroundMode="filled"
                    app:endIconMode="dropdown_menu"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/act_kelompok_tani"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pilih Kelompok Tani"
                        android:inputType="none"
                        android:textSize="14sp"
                        android:textColor="@android:color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Tambah Kelompok Baru Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_tambah_kelompok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="+ Tambah Kelompok Baru"
                    android:textSize="12sp"
                    android:textColor="@color/primary_green"
                    android:backgroundTint="@android:color/transparent"
                    app:strokeColor="@color/primary_green"
                    app:strokeWidth="1dp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_add"
                    app:iconSize="16dp"
                    app:iconGravity="textStart"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <!-- Informasi Kontak -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informasi Kontak"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_green"
                    android:layout_marginBottom="8dp" />

                <!-- Nama Ketua -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_green"
                    app:hintTextColor="@color/primary_green"
                    app:boxBackgroundColor="#F8FDF8"
                    app:boxBackgroundMode="filled"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_nama_ketua"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Ketua Kelompok"
                        android:inputType="textPersonName"
                        android:textSize="14sp"
                        android:textColor="@android:color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- No WhatsApp -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:boxStrokeColor="@color/primary_green"
                    app:hintTextColor="@color/primary_green"
                    app:boxBackgroundColor="#F8FDF8"
                    app:boxBackgroundMode="filled"
                    app:startIconDrawable="@drawable/ic_whatsapp"
                    app:startIconTint="@color/primary_green"
                    app:prefixText="+62 "
                    style="@style/Widget.Material3.TextInputLayout.FilledBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_no_whatsapp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nomor WhatsApp"
                        android:inputType="phone"
                        android:textSize="14sp"
                        android:textColor="@android:color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_batal"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Batal"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:backgroundTint="@android:color/transparent"
                        app:strokeColor="@android:color/darker_gray"
                        app:strokeWidth="1dp"
                        app:cornerRadius="12dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_simpan"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Simpan Alat"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/primary_green"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_save"
                        app:iconGravity="textStart"
                        app:iconTint="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp" />

    </LinearLayout>

</ScrollView>