<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Form Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informasi Dasar"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Pilih Kelompok Tani -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_kelompok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Pilih Kelompok Tani"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:startIconDrawable="@drawable/ic_group"
                    app:startIconTint="@color/primary_green">

                    <AutoCompleteTextView
                        android:id="@+id/act_kelompok"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:textSize="14sp"
                        tools:text="Kelompok Tani Sejahtera" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Nama Ketua -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_ketua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Nama Ketua Kelompok"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="@color/primary_green"
                    app:helperText="Nama ketua akan otomatis terisi">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_ketua"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textSize="14sp"
                        android:enabled="false"
                        tools:text="Budi Santoso" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Jumlah Anggota -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_jumlah_anggota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Jumlah Anggota"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_people"
                    app:startIconTint="@color/primary_green"
                    app:helperText="Jumlah anggota dalam kelompok">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_jumlah_anggota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:enabled="false"
                        tools:text="15" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Penghasilan Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Penghasilan"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Periode -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_bulan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="Bulan"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:startIconDrawable="@drawable/ic_calendar_month"
                        app:startIconTint="@color/primary_green">

                        <AutoCompleteTextView
                            android:id="@+id/act_bulan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:focusable="false"
                            android:textSize="14sp"
                            tools:text="Januari" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_tahun"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="Tahun"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:startIconDrawable="@drawable/ic_calendar_today"
                        app:startIconTint="@color/primary_green">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_tahun"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textSize="14sp"
                            tools:text="2024" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Total Penghasilan -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_total_penghasilan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Total Penghasilan (Rp)"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_money"
                    app:startIconTint="@color/primary_green"
                    app:helperText="Masukkan total penghasilan dalam Rupiah">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_total_penghasilan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="14sp"
                        tools:text="12500000" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Sumber Penghasilan -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_sumber_penghasilan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Sumber Penghasilan"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:startIconDrawable="@drawable/ic_source"
                    app:startIconTint="@color/primary_green"
                    app:helperText="Pilih sumber utama penghasilan">

                    <AutoCompleteTextView
                        android:id="@+id/act_sumber_penghasilan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:focusable="false"
                        android:textSize="14sp"
                        tools:text="Hasil Panen Padi" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Keterangan -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_keterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Keterangan (Opsional)"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:startIconDrawable="@drawable/ic_note"
                    app:startIconTint="@color/primary_green"
                    app:helperText="Tambahkan catatan atau keterangan khusus">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_keterangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:maxLines="5"
                        android:textSize="14sp"
                        android:gravity="top|start"
                        tools:text="Hasil panen periode musim hujan dengan kualitas baik" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status Data"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Status Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_rounded_light"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data Aktif"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Data akan ditampilkan dalam laporan"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="@color/white"
                        app:trackTint="@color/primary_green" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Batal"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:backgroundTint="@color/transparent"
                app:strokeColor="@color/text_secondary"
                app:strokeWidth="1dp"
                app:cornerRadius="24dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Simpan Data"
                android:textSize="14sp"
                android:backgroundTint="@color/primary_green"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_save"
                app:iconSize="18dp" />

        </LinearLayout>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    </LinearLayout>

</ScrollView>