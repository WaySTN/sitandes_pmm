<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna background -->
    <solid android:color="#4CAF50"/> <!-- Hijau untuk status tersedia -->

    <!-- Sudut membulat -->
    <corners android:radius="8dp"/>

    <!-- Padding (opsional, agar teks di dalam tidak menempel pinggir) -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp"/>

    <!-- Border (opsional, jika ingin ada garis pinggir) -->
    <stroke
        android:width="1dp"
        android:color="#388E3C"/>
</shape>
